         <children>
            <Label alignment="CENTER_RIGHT" prefHeight="20.0" prefWidth="662.0" text="Custom Discount">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Separator prefWidth="200.0">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </Separator>
            <Label text="Masukan Diskon Manual :" />
            <TextField fx:id="customDiscount" />
            <Button mnemonicParsing="false" onAction="#addCustomDiscount" text="Submit">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
