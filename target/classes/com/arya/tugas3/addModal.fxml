               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#addMenu" prefHeight="26.0" prefWidth="376.0" text="Add Menu">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</AnchorPane>
